%h1
  = t "transactions.account.title", :name => "foo"


- if @transactions.present?
  %ul#transactions
    - @transactions.each do |transaction|
      %li
        %span.title=transaction.title
        %span.amount=transaction.amount
        %span.account=transaction.account.name
        %span.tags=transaction.tag_list
    -
- else
  = t("transactions.account.no_transaction")
-


#actions
  = link_to t("transactions.account.back_link"), root_path
